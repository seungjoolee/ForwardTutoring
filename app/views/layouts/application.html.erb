<!DOCTYPE html>
<html>
<head>
  <title>Forwardtutoring</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "rateit" %>
  <%= yield(:stylesheets) %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div id="nav-container">
          <div id="logo">
            <%= link_to image_tag("forwardtutoring_qcl_logo.jpg"), subjects_path %>
          </div>
          <div id="nav" class="pull-right">
            <% if is_tutor %>
              <div class="option">
                <%= link_to 'Create Resource', new_resource_path %>
              </div>
            <% end %>
            
            <% if current_user %>
              Logged in as <%= current_user.name %>.
              <%= link_to "Logout", log_out_path %>
            <% else %>
              <%= link_to "Log In", log_in_path %>
            <% end %>
          </div>
        </div>   
      </div>
    </div>
  </div>

<%= yield %>

<%= yield(:javascript) %>
<%= javascript_include_tag "application" %>
<%= javascript_include_tag "jquery.rateit.min" %>

</body>
</html>
