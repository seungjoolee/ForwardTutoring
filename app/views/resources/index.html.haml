- content_for :stylesheets do
  = stylesheet_link_tag 'index'

%div.container#resources-container
  %div#search-row.row
    %form#search-form
      %div.col-md-2.col-md-offset-1
        %select.form-control.input-lg
          %option{:value=>"All"} All
          %option{:value=>"Math"} Math
          %option{:value=>"English"} English
      %div.col-md-6
        %input.form-control.input-lg{:placeholder => "Search Keywords..."}
      %div.col-md-2
        %button.btn.btn-primary.btn-lg{:type => "submit"}
          %span.glyphicon.glyphicon-search
          Search
  %div.row
    %div.col-md-2.col-md-offset-1
      %div#sort-box
        %div#header Sort By
        %div#date.option.selected Date
        %div#highest-rating.option Highest Rating
        
    %div.col-md-7
      %div#resources
        - @resources.each do |resource|
          %div.resource
            %div.title 
              %a{:href=>"/resources"}= resource.title 
            -#%div.rating <span>★</span><span>★</span><span>★</span><span>★</span><span>☆</span>
            %div.date= resource.created_at
            %div.posted_by 
              by:
              = resource.posted_by
            %div.description= resource.description
          
    
