- content_for :stylesheets do
  = stylesheet_link_tag 'index'

%div.container#subjects-container
  %div.row
    %div.col-md-10.col-md-offset-1
      %ol.breadcrumb
        %li.active Subjects

      %div.guide
        Pick a subject

      - @subjects.each do |subject|
        %div.col-md-6
          %div.subject
            %div.subject-title 
              =subject.title
            %div.field-block
              - subject.fields.each do |field|
                %div.field
                  %a.btn.btn-link.btn-lg{:href=>field_path(field)}
                    =field.title